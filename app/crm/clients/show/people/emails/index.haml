- content_for :head_content do
  %script{:src => "https://cloud.tinymce.com/stable/tinymce.min.js"}

- content_for :back_button do
  %a.btn.btn-lg{:href => "/crm"}
    %span.fa.fa-angle-left.icon-size-16
    Список клиентов

%section.view-column.view-column-gray
  .view-column-header
    = partial 'crm/clients/show/people/title'
  = partial 'shared/tabnav', locals: {nav: data.crm.clients.people.tabs, active: :emails, css_class: "view-column-tabnav"}
  .tab-content.view-column-tab-content
    -# %textarea{ role: 'tinymce-input' }
    = partial 'crm/clients/show/people/emails/details'
