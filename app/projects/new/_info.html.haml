.form-group
  %label.col-md-3
    Начало проекта
    %small
      (обязательное поле)
  .col-md-9
    .input-group-above.input-group-date
      %input#project_start_date.date-input.zebra-date-picker.form-control.date-input-short{"data-zdp_format" => "d.m.Y", :name => "project[start_date]", :placeholder => "Начало проекта (обязательно)", :readonly => "readonly", "role-zebra-date-picker" => "ready", :size => "30", :type => "text", :value => "27.08.2014"}/
      .input-group-addon.input-group-addon-btn{:role => "calendar-trigger"}
        .fa.fa-calendar-o.fa-lg
.form-group
  %label.col-md-3
    Дата завершения
    %small
      (обязательное поле)
  #project-end-date.col-md-9
    .input-group-above.input-group-date
      %input#project_end_date.date-input.zebra-date-picker.form-control.date-input-short{"data-errors-in" => "#project-end-date", "data-v-presence" => "true", "data-zdp_format" => "d.m.Y", :disabled => "disabled", :name => "project[end_date]", :placeholder => "Дата завершения", :readonly => "readonly", :role => "validable", "role-zebra-date-picker" => "ready", :size => "30", :type => "text", :value => ""}/
      .input-group-addon.input-group-addon-btn{"end-date" => "", :role => "calendar-trigger"}
        .fa.fa-calendar-o.fa-lg
    %ul.errors-list{:role => "errors-list"}
.form-group.underline
  %label.col-md-3
    Руководитель
    %small
      (обязательное поле)
  .col-md-9
    .input-group-above
      #s2id_project_manager_id.select2-container.select-two.chained-select{:style => "width: 100%;"}
        %a.select2-choice{:href => "javascript:void(0)", :onclick => "return false;", :tabindex => "-1"}
          %span.select2-chosen Александр Мещеряков
          %abbr.select2-search-choice-close
          %span.select2-arrow
            %b
        %input#s2id_autogen2.select2-focusser.select2-offscreen{:type => "text"}/
        .select2-drop.select2-display-none.select2-with-searchbox
