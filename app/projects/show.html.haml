---
body_class: projects-show
---

= partial 'shared/header'
.content.content-global.display-mode.display-mode-initialized{"data-initial-action" => "show", filters: "false", full_view: "true", list: "false", view: "true"}
  = partial 'projects/top_panel'
  = partial 'shared/_navigation'
  = partial 'projects/list_filters'
  = partial 'projects/projects_list'
  %section.view-column.projects-view-column.projects-view-column-initialized{"data-channel" => "private-project-879:update", "data-channel-template" => "private-project-%id%:update", "data-id" => "879", "data-url" => "/projects"}
    %section.task-view-column.disable-initializer{"data-channel-template" => "private-base_task-%id%:update", "data-url" => "/tasks"}
    #project-tab-pane.column-content
      #project-details.object-details
        = partial 'projects/show/header'
        = partial 'projects/tab_navigation', locals: {active_item: 0}
        .project-body
          = partial 'projects/status'
          %table.badges-list-container
            %tbody
              %tr
                %td
                  Категории:
                %td.badges-list.categories-view.categories-view-initialized
                  .label-tags
                    .add-button
                      %a.with-plus-button.add-tag{href: "#"}
                        Добавить
                        %span
                          %i.icon-plus
                    .adding-form
                      %form.new-todo{"accept-charset" => "UTF-8", action: "#", method: "post"}
                        %div{style: "margin:0;padding:0;display:inline"}
                          %input{name: "utf8", type: "hidden", value: "✓"}/
                          %input{name: "authenticity_token", type: "hidden", value: "syXuAMW2aDLCrcCmyQz7eFQhRhhSjEnrqXC/Ic0cZNs="}/
                        #s2id__name.select2-container.select2-container-multi.select-two.todo-body.select-two-initialized{style: "width: 100%;"}
                          %ul.select2-choices
                            %li.select2-search-field
                              %input#s2id_autogen2.select2-input.select2-default{autocapitalize: "off", autocomplete: "off", autocorrect: "off", spellcheck: "false", style: "width: 122%;", type: "text"}/
                          .select2-drop.select2-drop-multi.select2-display-none
                            %ul.select2-results
                        %input#_name.select-two.todo-body.select-two-initialized.select2-offscreen{"data-tags" => "[]", "data-url" => "/categories/879?project_id=879", name: "#[name]", placeholder: "Добавить категорию", size: "30", tabindex: "-1", type: "text"}/
                        %input{type: "reset", value: "Отменить"}/
          %ul.project-details
            %li
              %a.scroll{"data-target" => ".project-body", href: "#tasks"} 9 задач
            %li
              %a{href: "#members"} 7 участников
            %li
              %a{href: "#documents"} 15 документов
          %p
            Проект №:
            %span 879
          %p
            Начало:
            %span 23 мая 2014
          %p
            Дедлайн:
            %span 31 декабря 2015
            %i.icon-bell-alt
          .description
            %p Собираем в одном месте проблемные места интерфейса
          = partial 'projects/people_section'
