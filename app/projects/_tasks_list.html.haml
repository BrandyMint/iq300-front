%section.tree.project-tasks-list.project-tasks-list-initialized{"data-channel" => "private-project-1:base_tasks", "data-scroll-container" => ".column-content", "data-url" => "/projects/1/tasks"}
  .navbar.navbar-default.project-tasks-list-navbar
    .row
      .col-md-4
        %form.navbar-form.navbar-left
          .form-group
            .checkbox.project-tasks-list-navbar-checkbox
              %label
                %input.project-tasks-list-navbar-checkbox-input{type: 'checkbox'}
                Выбрать все
            .checkbox.project-tasks-list-navbar-checkbox
              %label
                %input.project-tasks-list-navbar-checkbox-input{type: 'checkbox'}
                Скрыть группы
      .col-md-4
        %form.navbar-form.navbar-left
          %select.form-control.input-sm
            - tasks_filter = ['К выполнению', 'Завершённые', 'Черновики', 'Задачи на сегодня', 'Задачи по участникам']
            %option{selected: 'selected'} Все задачи
            - tasks_filter.each do |f|
              %option= f
      .col-md-4
        .pull-right
          .navbar-form.navbar-left
            = link_to 'Добавить группу', '#', class: 'btn btn-default btn-sm'
            &nbsp;&nbsp;
            = link_to 'Добавить задачу', '#', class: 'btn btn-default btn-sm'

        .clearfix


  %ul.contents
    %li.active
      %ul.infinite-list
        = partial 'projects/tasks/list'
  %a.add-task Добавить черновик задачи
  .new-task-form.project-task-form.project-task-form-initialized{"data-url" => "/projects/1/tasks/new", :style => "display: none;"}
