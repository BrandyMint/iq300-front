.task-box.project-task-box.project-task-box-template
  .row
    .col-sm-3
      .task-box-description-block{:role => "project-task-box-description"}
        %input.form-control{type: 'text', placeholder: 'Название задачи'}
    .col-sm-3
      = partial 'shared/select2', locals: {title: 'Выберите исполнителя'}
    .col-sm-3
      .input-group-inline
        .input-group{role: 'tooltip', data: {'original-title' => 'Срок выполнения'}}
          %input.date-input.zebra-date-picker.form-control{"data-pair" => "input-end-date", "data-show-clear-date" => "false", "data-zdp_format" => "d.m.Y", :readonly => "readonly", "role-zebra-date-picker" => "ready", :type => "text", :value => "22.08.2014"}
          .input-group-addon
            .fa.fa-calendar-o.fa-lg
    .col-sm-3
      .row
        .col-xs-6
          = link_to 'Добавить', '', class: 'btn btn-success', role: 'project-tasks-list-task-form-close'
        .col-xs-6
          = link_to 'Отменить', '', class: 'btn link-gray-light', role: 'project-tasks-list-task-form-close'

  = link_to '#', role: 'project-task-box-edit-task-btn', data: {project_id: 'new'}  do
    Больше параметров&hellip;

  .task-box.project-task-box-form.hide{role: 'project-task-box-form', data: {project_id: 'new'}}
    .col-lg-10.col-lg-offset-1
      = partial 'projects/tasks/form', locals: {project_id: 'new'}


         
