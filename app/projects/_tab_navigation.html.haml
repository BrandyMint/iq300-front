- tabs = [{slug: 'details', title: 'Детали'}, {slug: 'tasks', title: 'Задачи'}, {slug: 'discussions', title: 'Обсуждения'}, {slug: 'plan', title: 'План'}, {slug: 'documents', title: 'Документы'}, {slug: 'participants', title: 'Участники'}, {slug: 'history', title: 'История'}, {slug: 'reports', title: 'Отчёты'}]
- active_item = locals[:active_item] || 0

.project-show-tabs
  %ul.nav.nav-tabs{"data-container" => "#project-tab-pane", "role-ready" => "tabnav"}
    - tabs.each_with_index do |tab, i|
      %li{class: i == active_item ? 'active' : '' }
        = link_to "#{tab[:slug]}" do
          = tab[:title]
          - if i%2 == 0
            .nav-tabs-notification-bullet
    %li.pull-right
      %a.printer{href: "/projects/879.printer", target: "_blank"}
        %i.icon-print.icon-color-gray-light.icon-size-12
    .clearfix

