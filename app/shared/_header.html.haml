.application-header
  = partial 'notifications/popover'
  %header.header-global
    %a.logo{href: "/", title: "IQ300 System"}
    - if current_page.data.search
      .search-header{"role-ready" => "search-form"}
        %span.search-button
          %span.icon-search
        %form.form-search{action: "/projects/879", method: "get"}
          / - b = button_tag raw("<span class='icon-search'></span>")
          / #{content_tag(:i)}#{i}#{b}
          %i
          %input#search.search-query.form-control{name: "search", placeholder: "Поиск", role: "global-search-field", type: "search"}/
    = yield_content(:back_button) if yield_content(:back_button).present?
    %span.app-version
      = app_version
    .user-nav
      .dropdown.pull-right
        %a.user-nav-link.user-nav-btn{data: {toggle: :dropdown}}
          %span.userpic
            %img.userpic-image.img-corrector-initialized{alt: "Александр", hide_wait_message: "true", src: "https://iq300.s3.amazonaws.com/uploads/user_profile/photo/1394/medium_fc37398f-9139-41cd-be1c-1d252d5f50f8.jpg", title: "Мещеряков Александр Игоревич"}/
          Александр Мещеряков
        %ul.dropdown-menu{role: :menu}
          - ['Подсказки', 'Помощь', 'Выйти'].each do |l|
            %li
              %a{href: ""}= l
      .dropdown.user-nav-btn.pull-right
        %a.btn.btn-primary.btn-circle-plus{data: {toggle: :dropdown}}
          %span.btn-circle-plus-icon +
        %ul.dropdown-menu{role: :menu}
          - ['Новая задача', 'Новый проект', 'Новое сообщество', :divider, 'Обратная связь'].each do |l|
            - if l == :divider
              %li.divider
            - else
              %li
                %a{href: ""}= l
      .user-nav-btn.pull-right
        %a.notifications-widget-button.user-nav-link{role: 'notifications-widget-button'}
          %i.iqs-notifications-o
          .notifications-widget-button-bullet

      .clearfox
