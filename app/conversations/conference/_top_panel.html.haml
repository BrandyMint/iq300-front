%section.top-panel
  .container-fluid
    .row
      .col-md-2
        %a.btn{:href => "/conversations"}
          %span.fa.fa-reply
          Сообщения
      .col-md-5
        .top-panel-title.text-left
          %a{role: :tooltip, 'data-original-title' => 'Изменить тему'}
            Без темы
      .col-md-5.text-right
        - data.avatars.last(4).each do |u|
          %a.btn-link-plain{href: '/users/2'}
            %img.member-box-avatar-image-small.conference-members-avatar-image{:src => u[:url], :alt => "", :width => "40px", :height => "40px"}
        &nbsp;
        %a
          и ещё 2
        &nbsp;&nbsp;
        %a.btn.btn-outline-primary{role: 'tooltip conference-add-member-btn', data: {'original-title' => 'Добавить участника'}}
          %i.fa.fa-plus
        &nbsp;
        %a.btn.btn-outline-primary{role: 'tooltip conference-settings-btn', data: {'original-title' => 'Управление конференцией'}}
          %i.fa.fa-cog
        &nbsp;
        %a.btn.btn-outline-gray-light{role: 'tooltip conference-leave-btn', data: {'original-title' => 'Покинуть конференцию'},
            href: 'javascript:confirm("Вы не сможете читать сообщения в этой конференции. Покинуть её?")'}
          %i.fa.fa-times




