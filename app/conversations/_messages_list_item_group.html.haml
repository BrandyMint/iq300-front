- text = 'Слушай, мы тут для одной фирмы с другом портал пишем для рабочих в цеху (справки заказывать разные, письма директорам писать с жалобами и т.д.) Нам программист нужен для этого проекта. Нам программист нужен для этого проекта...'
- user_status = locals[:user_status] || 'offline'
- files = locals[:files]
- message_status = locals[:message_status] || ''
- from_current_user = locals[:from_current_user]
- author = locals[:author] || 'Шамиль Хамадеев, Эльвир Нуриахметов, Ирина Михайлова и ещё 3 участника'

.message-box.conference-message-box{class: "#{locals[:conversation] ? 'conversation-box' : ''} message-box-#{message_status} #{from_current_user ? 'message-box-from-current-user' : ''}"}
  .media
    .pull-left
      %a.message-box-user-avatar{href: '/conversations/conference'}
        - data.avatars.last(5).each do |u|
          %img.img-circle.message-box-user-avatar-image{:src => u[:url], :alt => "", :width => "40px", :height => "40px"}
        .img-circle.message-box-user-avatar-image.message-box-user-avatar-more
          &hellip;

    .media-body
      .message-box-header
        .row
          .col-xs-11
            %a.message-box-title{href: '/conversations/conference'}
              = author
            %p.text-muted 21 июля, 14:59
          .col-xs-1.text-right
            - if message_status == 'new'
              .badge.badge-primary 5
      .message-body
        .row
          .col-xs-11
            .message-body-text
              = text
          .col-xs-1.text-right
            .badge 245
        .message-box-files
          - if files && files.any?
            - files.each do |f|
              %a.btn.btn-default{:href => "#"}
                %span.fa.fa-file-text-o 
                  = "#{f}"


