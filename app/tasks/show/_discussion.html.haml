%section.view-column.task-view-column{"data-channel" => "private-base_task-65590:update", "data-channel-template" => "private-base_task-%id%:update", "data-status" => "completed", "data-url" => "/tasks/65590", "role-task-view-column" => "ready", "test-task-view" => ""}
  .form-container
    = partial 'tasks/show/title'
  %ul.nav.nav-tabs.tabnav{"data-channel" => "presence-5:base_task-121", "data-container" => ".tab-content", "data-read-changes-url" => "/changes/read?base_task_id=121", "role-ready" => "tabnav", "test-tabnav" => ""}
    %li{"data-changes" => "base_tasks,todo_items,attachment_links"}
      -#%a{"data-target" => "task-details", :href => "/tasks/121"}
      %a{"data-target" => "task-details", :href => "/tasks/show"}
        Детали
        %span.badge{:role => "counter"}
    %li#accessor_users_tab{"data-changes" => "accessor_users"}
      -#%a{"data-class" => "accessor-users-view", "data-target" => "task_accessor_users", :href => "/tasks/121/accessor_users"}
      %a{"data-class" => "accessor-users-view", "data-target" => "task_accessor_users", :href => "/tasks/show/accessor_users"}
        Участники
        %span.badge{:role => "counter"}
    %li
      %a{"data-target" => "task_activities", :href => "/tasks/121/activities?initial=true"} История
    %li.active.discussion.discussion-initialized{"data-changes" => "comments"}
      %a{"data-target" => "task-discussions", :href => "/tasks/121/discussion?initial=true"}
        Обсуждения
        %span.badge{:role => "counter"} 1
  
  .tab-content
    #task-details.tab-pane.active
      .task-discussion{"role-task-discussion" => "ready"}
        .comments-list{role: 'fixed-block-parent-comments', "data-channel" => "private-discussion-137412:comments", "data-url" => "/discussions/137412/comments", "data-with-button" => ""}
          .text-center
            %a.btn.btn-default{:href => "#", :role => "infinite-list-button"} Загрузить еще 100
            .pull-right.task-comments-filter.hide
              %input#task-comments-filter{:name => "task-comments-filter", :type => "checkbox", :value => "task-comments-filter"}/
              %label{:for => "task-comments-filter"} Скрывать активность
            .clearfix

          .infinite-list{:role => "ui-infinite-list"}
            .more-button-data{"data-current-page" => "1", "data-limit-value" => "10", "data-total-pages" => "3", :style => "display:none;"}
            - for i in 0..3
              = partial 'tasks/show/discussion_list'


