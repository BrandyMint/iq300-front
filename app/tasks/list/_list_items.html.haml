%article.task-box-block
  %a.task-box-block-link{href: "/tasks/show"}
    .task-box{"data-group-id" => "all_tasks", "data-group-title" => "Все задачи", "data-href" => "/tasks/2531", :role => "task-item", "test-task" => ""}
      .col-md-10
        .row
          .col-md-10
            %h4.fa.text-warning.star-favourite.fa-star-o.task-box-title-icon{"data-url" => "/favorites?base_task_id=2531", :role => "favorite-list-view"}
            %h4.task-box-title-block
              %span.title{"data-original-title" => "test task", "role-bootstrap-tooltip" => "ready", "test-task-title" => "", :title => ""}
