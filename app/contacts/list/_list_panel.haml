        %option{value: "favorite"} По важности
        %option{value: "deadline"} По дедлайну
        %option{value: "projects_u"} По проектам
      .btn-group
        %select.form-control-select-plain{role: 'multiselect-select',
          data: {'button-class' => 'btn btn-link-plain', 'caret-icon' => 'false'}}
